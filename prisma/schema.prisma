generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  VENDOR
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  referrals Referral[]
}

model Referral {
  id           String   @id @default(cuid())
  code         String   @unique
  referrerId   String
  referrer     User     @relation(fields: [referrerId], references: [id])
  referredId   String?
  createdAt    DateTime @default(now())
}
